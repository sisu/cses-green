<% view contests uses ContestsPage extends page %>
<% template body() %>
<html>
<body>
<h1>Contests</h1>
<% foreach c in contests %>
<ul>
<% item %>
	<li><a href="<% url "contest" using c %>"><%= c %></a></li>
<% end %>
</ul>
<% end %>
</body>
</html>
<% end template %>
<% end view %>


